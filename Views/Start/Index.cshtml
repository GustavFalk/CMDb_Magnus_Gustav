@model CMDb_MGM.Models.ViewModels.IndexViewModel

    <div class="slideshow-container">

        @foreach (var movie in Model.MovieTopList)
        {
            <a class="movie-link" href=@Url.Action("Index", "MovieInfo", new { id = movie.IMDbID }, null )>
                
                    <div class="mySlides fade">
                        <div id="movie-poster">
                            <img id="movie-img" src="@movie.Poster" />
                        </div>
                        <div id="movie-info">
                            <div id="toplist-position"><h2 style="font-size:3vw;" >#@movie.toplistplacement</h2></div>
                            <div id="movie-text">
                                <h1 style="font-size:2vw"> @movie.Title </h1>
                                <p style="font-size:1.5vw;">@movie.Rated | @movie.Runtime | @movie.Genre | @movie.Released</p>
                            </div>
                            <div class="movie-rating">
                                <p style="font-size:2vw;">Likes: @movie.numberOfLikes Dislikes: @movie.numberOfDislikes</p>
                            </div>
                        </div>
                    </div>
                
             </a>
        }
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>







